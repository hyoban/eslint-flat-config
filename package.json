{
  "name": "eslint-flat-config",
  "type": "module",
  "version": "1.1.8",
  "packageManager": "pnpm@8.15.3",
  "description": "Writing eslint flat config more easily",
  "author": "Stephen Zhou <hi@hyoban.cc>",
  "license": "MIT",
  "homepage": "https://github.com/hyoban/eslint-flat-config#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hyoban/eslint-flat-config.git"
  },
  "bugs": "https://github.com/hyoban/eslint-flat-config/issues",
  "keywords": [],
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "simple-git-hooks && pnpm build",
    "lint": "eslint .",
    "typecheck": "tsc",
    "test": "vitest",
    "build": "tsup src/index.ts --format cjs,esm --clean --dts",
    "dev": "pnpm build --watch",
    "start": "tsx src/index.ts",
    "prepublishOnly": "pnpm run build"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "hooks": {
      "before:init": [
        "pnpm run lint",
        "pnpm run typecheck",
        "pnpm run test --run"
      ]
    }
  },
  "peerDependencies": {
    "eslint": "^8.56.0"
  },
  "dependencies": {
    "@eslint/js": "^8.56.0",
    "@typescript-eslint/utils": "^7.0.2",
    "defu": "^6.1.4",
    "eslint-config-flat-gitignore": "^0.1.3",
    "globals": "^14.0.0"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^1.6.2",
    "@types/node": "^20.11.19",
    "eslint": "^8.56.0",
    "eslint-plugin-antfu": "^2.1.2",
    "eslint-plugin-import": "npm:eslint-plugin-i@^2.29.1",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-unicorn": "^51.0.1",
    "lint-staged": "^15.2.2",
    "simple-git-hooks": "^2.9.0",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^7.0.2",
    "vitest": "^1.3.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
