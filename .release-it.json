{
  "git": {
    "commitMessage": "chore: release ${version}"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "angular"
      },
      "infile": "CHANGELOG.md"
    }
  },
  "hooks": {
    "before:init": ["pnpm lint", "pnpm typecheck", "pnpm test -- run"],
    "after:bump": ["pnpm build"],
    "before:release": "git add CHANGELOG.md"
  }
}
